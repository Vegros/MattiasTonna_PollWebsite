@model Domain.Models.Poll

<div class="container py-5">
    <div class="frosted-glass p-4 mx-auto" style="max-width: 600px;">
        <h2 class="text-center fw-bold mb-4">@Model.Title</h2>

        <form method="post" asp-action="Vote">
            <input type="hidden" name="pollId" value="@Model.Id" />

            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedOption" value="1" id="option1" required>
                    <label class="form-check-label" for="option1">@Model.Option1Text</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedOption" value="2" id="option2" required>
                    <label class="form-check-label" for="option2">@Model.Option2Text</label>
                </div>

                @if (!string.IsNullOrEmpty(Model.Option3Text))
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="selectedOption" value="3" id="option3">
                        <label class="form-check-label" for="option3">@Model.Option3Text</label>
                    </div>
                }
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary glowing-btn px-4 py-2">Submit Vote</button>
            </div>
        </form>
        <div class="text-center mt-5">
            <a asp-controller="Poll" asp-action="Index" class="btn btn-outline-light">Back to Polls</a>
        </div>
    </div>
</div>
