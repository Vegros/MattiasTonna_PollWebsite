@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="frosted-glass p-4 p-md-5" style="max-width: 500px; width: 100%;">
        <h2 class="text-center fw-bold mb-4">Login</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3 text-black">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 text-black">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100 glowing-btn">Log In</button>
        </form>

        <div class="mt-4 text-center border-top pt-4">
            <p class="text-muted mb-2">Don't have an account?</p>
            <a class="btn btn-outline-light btn-sm px-4 py-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                Create one here
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
