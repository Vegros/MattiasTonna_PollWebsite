@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="frosted-glass p-4 p-md-5 text-center" style="max-width: 600px; width: 100%;">
        <h2 class="fw-bold mb-3 text-white">🎉 Registration Successful!</h2>

        <p class="mb-3 text-light">
            Thanks for registering! Please confirm your email to activate your account.
        </p>

        @if (Model.DisplayConfirmAccountLink)
        {
            <a class="btn btn-primary btn-lg glowing-btn" id="confirm-link" href="@Model.EmailConfirmationUrl">
                Confirm My Email
            </a>
        }
    </div>
</div>
